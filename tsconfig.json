{
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "target": "es2019",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "paths": {
      "@root/*": ["src/*"],
      "@config": ["src/config.ts"],
      "@db/*": ["src/db/*"],
      "@test/*": ["__tests__/*"],
      "@handlers/*": ["src/handlers/*"],
      "@helpers/*": ["src/helpers/*"],
      "@utils/*": ["src/utils/*"],
      "@models/*": ["src/models/*"],
      "@functions/*": ["src/functions/*"],
      "@libs/*": ["src/libs/*"]
    },
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "src/**/*.js", "serverless.ts"],
  "exclude": ["node_modules", "__tests__"]
}
